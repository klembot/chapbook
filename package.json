{
  "name": "Chapbook",
  "author": "Chris Klimas <chris@twinery.org>",
  "description": "A Twine story format emphasizing ease of authoring, multimedia, and playability on many different types of devices. Visit the <a href=\"https://klembot.github.io/chapbook/guide/\">guide</a> for more information.",
  "engines": {
    "node": ">=14"
  },
  "license": "MIT",
  "type": "module",
  "version": "2.1.1",
  "scripts": {
    "build": "node scripts/website.mjs",
    "e2e": "playwright test --config playwright.runtime.config.ts",
    "e2e:extensions": "playwright test --config playwright.extensions.config.ts",
    "lint": "eslint './src/**/*.ts'",
    "start": "vite --config vite.runtime.config.js",
    "start:extensions": "vite --config vite.extensions.config.js",
    "start:website": "node scripts/website.mjs watch",
    "test": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@playwright/test": "^1.38.1",
    "@testing-library/dom": "^9.3.3",
    "@testing-library/jest-dom": "^5.16.5",
    "@types/codemirror": "^5.60.15",
    "@types/fs-extra": "^11.0.4",
    "@types/get-value": "^3.0.3",
    "@types/lodash-es": "^4.17.7",
    "@types/marked": "^4.0.8",
    "@types/node": "^20.6.3",
    "@types/seedrandom": "^3.0.5",
    "@types/serve-static": "^1.15.5",
    "@types/set-value": "^4.0.1",
    "@types/timestring": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "@vitest/coverage-v8": "^1.1.0",
    "codemirror": "^5.65.16",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.8.0",
    "execa": "^8.0.1",
    "extwee": "^2.2.2",
    "fs-extra": "^11.2.0",
    "jsdom": "^23.0.1",
    "postcss-url": "^10.1.3",
    "rollup-plugin-visualizer": "^5.9.0",
    "serve-static": "^1.15.0",
    "typedoc": "^0.24.8",
    "typescript": "^4.9.5",
    "vite": "^4.1.4",
    "vite-plugin-checker": "^0.5.6",
    "vite-plugin-html": "^3.2.0",
    "vite-plugin-singlefile": "^0.13.3",
    "vitest": "^1.1.3"
  },
  "dependencies": {
    "@tabler/icons": "^2.46.0",
    "lodash-es": "^4.17.21",
    "marked": "^4.2.12",
    "open-color": "^1.9.1",
    "reasonable-colors": "^0.4.0",
    "seedrandom": "^3.0.5",
    "timestring": "^6.0.0"
  }
}
