		"cpy-cli": "^2.0.0",
		"cross-env": "^5.2.0",
		"css-loader": "^0.28.11",
		"eslint": "^4.14.0",
		"gitbook-cli": "^2.3.2",
		"html-webpack-plugin": "^3.2.0",
		"jest": "^24.7.1",
		"jest-localstorage-mock": "^2.2.0",
		"jsdoc": "^3.6.2",
		"jstransformer-marked": "^1.0.3",
		"lodash.escape": "^4.0.1",
		"mini-css-extract-plugin": "^0.4.0",
		"mock-local-storage": "^1.0.5",
		"node-sass": "^4.9.0",
		"npm-run-all": "^4.1.3",
		"pug": "^2.0.3",
		"rimraf": "^2.6.3",
